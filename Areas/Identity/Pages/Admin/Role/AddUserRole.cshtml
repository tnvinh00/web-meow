@page "/Admin/Role/AddUserRole"
@model Sky.Areas.Identity.Pages.Role.AddUserRoleModel
@{
    ViewData["Title"] = "Cập nhật role cho User";
    Layout = "~/Areas/Identity/Pages/Admin/_AdminLayout.cshtml";
    //Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-9">
        <p>Chọn các role gán cho <strong>@Model.Input.Name</strong></p>
        <form method="post">
            <partial name="_StatusMessage" model="@Model.StatusMessage" />
            <div class="form-group">
                @Html.LabelFor(x => x.Input.RoleNames)
                @Html.ListBoxFor(x => x.Input.RoleNames,
                    new SelectList(Model.AllRoles),
                    new { @class = "w-100", id = "selectrole" })
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Input.ID">
            <input type="hidden" asp-for="IsConfirmed">
            <button type="submit" class="btn btn-success">Lưu</button>
            <a class="btn btn-primary" asp-page="./User">Trở lại</a>
        </form>
        
    </div>
</div>

@section Scripts {
    <script src="~/lib/multiple-select/multiple-select.min.js"></script>
    <link rel="stylesheet" href="~/lib/multiple-select/multiple-select.min.css" />
    <style>
        .ms-choice > span{
            padding-top: 8px !important;
            padding-bottom: 8px !important;
        }
        .ms-choice {
            height: 42px !important;
            border: 1px solid black !important;
        }
    </style>
    <script>
          $('#selectrole').multipleSelect({
                selectAll: false,
                keepOpen: false,
                isOpen: false
            });
    </script>


    <partial name="_ValidationScriptsPartial" />
}