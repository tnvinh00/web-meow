@page
@model Sky.Areas.Identity.Pages.Admin.User.DeleteUserModel
@{
    ViewData["Title"] = "Xóa User";
    Layout = "~/Areas/Identity/Pages/Admin/_AdminLayout.cshtml"; 
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <p>Bạn có chăc chắn xóa tài khoản <strong>@Model.Input.UserName</strong> không?</p>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Input.ID">
            <input type="hidden" asp-for="IsConfirmed">
            <button type="submit" asp-page="./DeleteUser" class="btn btn-danger">Xóa</button>
            <a class="btn btn-primary" asp-page="./UserManager">Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}