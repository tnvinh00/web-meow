<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Meow</title>
    <link rel="icon" href="~/logo/logo-mini.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <link href="~/sbadmin/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/sbadmin/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" />
    
</head>

<body id="page-top">
    <!-- Page Wrapper -->
    <div id="wrapper">
        <!-- Sidebar -->
        <partial name="~/Areas/Identity/Pages/Admin/_SideBar.cshtml">
            <!-- Content Wrapper -->
            <div id="content-wrapper" class="d-flex flex-column">
                <!-- Main Content -->
                <div id="content">
                    <partial name="~/Areas/Identity/Pages/Admin/_TopBarPartial.cshtml">
                        <div class="container-fluid pl-lg-5">
                            @RenderBody()
                        </div>
                </div>

                <!-- Footer -->
                <footer class="sticky-footer bg-white border-top">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; 2020 Your Website 2020</span>
                        </div>
                    </div>
                </footer>

                <!-- End of Footer -->
            </div>
            <!-- End of Content Wrapper -->

    </div>

    <!--Scroll to top-->
    <a class="scroll-to-top rounded" href="#page-top" style="display: none;">
        <i class="fas fa-angle-up"></i>
    </a>
    <div class="position-fixed d-block" style="bottom: 80px; right: 20px;">
        <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-primary">
            <i class="fas fa-hand-point-right"></i> Đi tới trang chủ
        </a>
    </div>
    <div class="loaderbody hide" id="loaderbody">
        <div class="loader"></div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/sbadmin/js/sb-admin-2.min.js"></script>
    <script src="~/sbadmin/js/Chart.min.js"></script>

    <script src="~/sbadmin/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/sbadmin/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>