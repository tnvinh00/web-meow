@model IEnumerable<Sky.Models.FavoriteDetail>
@using System.Globalization

@{
    //Layout = "~/Views/Shared/_Layout3.cshtml";
    Layout = null;
    CultureInfo culture = CultureInfo.CreateSpecificCulture("vi-VI");
}

<div class="dropdown-item text-center">
    @ViewData["FavoriteCount"]
</div>

@foreach (var item in Model)
{
    <a class="dropdown-item d-flex align-items-center">
        <div class="dropdown-list-image mr-3">
            <img src="@("~/image/"+item.Product.ProductImage)" asp-append-version="true" class="rounded-circle" />
            <div class="status-indicator bg-success"></div>
        </div>
        <div>
            <div class="text-truncate">
                @item.Product.ProductName
            </div>
            <div class="small text-gray-500">@(item.Product.ProductPrice.ToString("#,##0", culture))</div>
        </div>
    </a>
}

<div class="text-center">
    <b>@ViewData["More"]</b>
</div>
